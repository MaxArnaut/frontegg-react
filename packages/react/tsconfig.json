{
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext",
      "dom"
    ],
    "target": "es6",
    "noEmitHelpers": true,
    "importHelpers": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": true,
    "outDir": "./dist",
    "module": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "@helpers": [
        "./helpers"
      ],
      "@helpers/*": [
        "./helpers/*"
      ],
      "@components": [
        "./components"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@api": [
        "./api"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@elements": [
        "./elements"
      ],
      "@elements/*": [
        "./elements/*"
      ],
      "@providers": [
        "./providers"
      ],
      "@providers/*": [
        "./providers/*"
      ],
      "@plugins": [
        "./plugins"
      ],
      "@plugins/*": [
        "./plugins/*"
      ]
    }
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}

