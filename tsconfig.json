{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSources": true,
    "sourceMap": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
